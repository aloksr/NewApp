<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cross_awb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_close_grey600_18dp" />


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/InputLayoutTheme">

                <EditText
                    android:id="@+id/input_awbentry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xxlarge"
                    android:layout_marginRight="@dimen/xxlarge"
                    android:textStyle="bold"
                    android:textSize="30dp"
                    android:hint="@string/enter_awb_number"
                    android:maxLength="12"
                    android:padding="10dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@null"
                    android:paddingLeft="5dp" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@id/input_awbentry"
                android:layout_marginLeft="@dimen/xxlarge"
                android:layout_marginRight="@dimen/xxlarge"
                android:background="#cccccc" />

            <Button
                android:id="@+id/awbno_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="80dp"
                android:maxLength="12"
                android:gravity="center"
                android:layout_marginBottom="50dp"
                android:background="@drawable/curverdrectangular_red_button"
                android:minHeight="55dp"
                android:minWidth="300dp"
                android:text="@string/submit"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
