<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/closing_bg"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="vertical"
            android:padding="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/lastclosing_km"
                android:textColor="#666666"
                android:textSize="@dimen/large"
                android:textStyle="normal"
                android:typeface="serif" />

            <TextView
                android:id="@+id/closing_kmonlogout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/large"
                android:layout_marginRight="@dimen/large"
                android:inputType="number"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/font_xxxlarge"
                android:textStyle="bold"
                android:typeface="serif" />


        </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/InputLayoutTheme"
                >
                <EditText
                    android:id="@+id/input_kmonlogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/large"
                    android:gravity="center"
                    android:maxLength="6"
                    android:inputType="number"
                    android:hint="@string/current_inputkm"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textSize="30dp"
                   android:padding="10dp"
                    android:layout_marginRight="@dimen/large"
                    android:layout_marginTop="@dimen/large"
                    android:background="@null"

                   />
            </android.support.design.widget.TextInputLayout>
            <View
                android:layout_below="@id/input_vehicleno"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#cccccc" />
            <LinearLayout
                android:id="@+id/date_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:weightSum="1"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/input_logout_date_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".70"
                    android:hint=""
                    android:textSize="15dp"
                    />
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight=".30"
                     android:gravity="end"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/date_time"
                        android:layout_width="match_parent"
                        android:background="@drawable/ic_date_range_black_24dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="10dp"
                android:weightSum="2"
                >
                <Button
                    android:id="@+id/cancle"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="@string/cancel"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:background="@drawable/curverdrectangular_red_button"
                    android:textColor="@color/white"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    />
                <Button
                    android:id="@+id/submit"
                    android:layout_width="100dp"
                    android:layout_height="45dp"
                    android:text="@string/submit"
                    android:layout_weight="1"
                    android:background="@drawable/curverdrectangular_red_button"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>
