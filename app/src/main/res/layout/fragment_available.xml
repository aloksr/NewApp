<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:orientation="vertical"
        android:scrollbars="none" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/button_layout"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/accept_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxlarge"
                    android:minWidth="200dp"
                    android:gravity="center"
                    android:minHeight="200dp"
                    android:text="@string/accept_button"
                    android:textSize="25dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:background="@mipmap/ic_btn_green"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/error_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="25dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/error_txt"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:background="@color/white"
                android:layout_marginRight="5dp"
                card_view:cardCornerRadius="5dp">
            <LinearLayout
                android:id="@+id/available_details"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:layout_height="match_parent">
                <TextView
                    android:id="@+id/order_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint=""
                    android:layout_margin="5dp"
                   android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="25sp"
                    />
                <TextView
                    android:id="@+id/branch_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:textColor="#666666"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    />
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#cccccc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:weightSum="1"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_weight=".4"
                        android:layout_width="0dp"
                        android:minHeight="50dp"
                        android:minWidth="50dp"
                        android:src="@mipmap/ic_start"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight=".6"
                        android:layout_marginLeft="10dp"
                        android:weightSum="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:hint="@string/source"
                            android:layout_margin="2dp"
                            android:layout_gravity="left"
                            android:textColor="#666666"
                            android:layout_weight=".5"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/source"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:hint=""
                            android:layout_margin="2dp"
                            android:layout_gravity="left"
                            android:textColor="@color/black"
                            android:layout_weight=".5"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                    </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#cccccc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:weightSum="1"
                    android:visibility="visible"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_weight=".3"
                        android:layout_width="0dp"
                        android:src="@mipmap/ic_end"
                        android:minHeight="50dp"
                        android:minWidth="50dp"
                        android:layout_height="match_parent" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight=".7"
                        android:layout_marginLeft="10dp"
                        android:weightSum="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:hint="@string/destination_new"
                            android:layout_margin="2dp"
                            android:layout_gravity="left"
                            android:textColor="#666666"
                            android:layout_weight=".5"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/destination"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:hint=""
                            android:layout_margin="2dp"
                            android:layout_gravity="left"
                            android:textColor="@color/black"
                            android:layout_weight=".5"
                            android:textSize="18sp"
                            />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#cccccc" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight=".5"
                        android:weightSum="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:hint="@string/ti_name"
                            android:layout_margin="2dp"
                            android:layout_gravity="left"
                            android:textColor="#666666"
                            android:layout_weight=".5"
                            android:textSize="18sp"
                            />
                        <TextView
                            android:id="@+id/ti_name"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:hint=""
                            android:layout_margin="2dp"
                            android:layout_gravity="left"
                            android:textColor="@color/black"
                            android:layout_weight=".5"
                            android:textSize="18sp"
                            />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_weight=".5"
                        android:weightSum="1"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:hint="@string/ti_no"
                            android:layout_margin="2dp"
                            android:layout_gravity="left"
                            android:textColor="#666666"
                            android:layout_weight=".5"
                            android:textSize="20sp"
                            />
                        <TextView
                            android:id="@+id/ti_no"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:hint=""
                            android:layout_margin="2dp"
                            android:layout_gravity="left"
                            android:textColor="@color/black"
                            android:layout_weight=".5"
                            android:textSize="18sp"
                            />

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#cccccc" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="5dp"
                    android:weightSum="1"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:hint="@string/order_date"
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:textColor="#666666"
                        android:layout_weight=".5"
                        android:textSize="20sp"
                        />
                    <TextView
                        android:id="@+id/order_date"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:hint=""
                        android:layout_margin="2dp"
                        android:layout_gravity="left"
                        android:textColor="@color/black"
                        android:layout_weight=".5"
                        android:textSize="18sp"
                        />

                    </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#cccccc" />



            </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
