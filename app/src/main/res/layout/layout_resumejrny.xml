<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">
    <include layout="@layout/commontoolbar_foractivity">
    </include>
    <include
        layout="@layout/error_view"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:background="@color/white"
        android:fadingEdge="none"
        android:orientation="vertical"
        android:scrollbars="none" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"

                >
                <TextView
                    android:id="@+id/lastclosing_km"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/large"
                    android:layout_marginRight="@dimen/large"
                    android:text="@string/drop_detail"
                    android:textColor="#000000"
                    android:textSize="@dimen/font_xxxlarge"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/l2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/l1"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".4"
                    android:text="@string/awb_no"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_small"
                    android:textStyle="bold"
                    android:typeface="serif" />

                <TextView
                    android:id="@+id/awb_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".6"
                    android:text=""
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="serif" />

            </LinearLayout>
            <LinearLayout
                android:id="@id/l3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l2"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="1">
                <LinearLayout
                    android:id="@+id/l_scan"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:visibility="visible">
                    <Button
                        android:id="@+id/scaningagain_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/ic_btn_yellow"
                        android:gravity="center"
                        android:minHeight="158dp"
                        android:minWidth="158dp"
                        android:text="@string/button_scan"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="center|left"
                    android:orientation="vertical"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/no_of_box"

                        android:theme="@style/InputLayoutTheme"
                        >
                        <EditText
                            android:id="@+id/input_boxno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/large"
                            android:layout_marginRight="@dimen/large"
                            android:layout_marginTop="@dimen/large"
                            android:background="@null"
                            android:gravity="center"
                            android:inputType="number"
                            android:maxLength="4"
                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:textColorHint="#000000"
                            android:textSize="30dp"
                            android:textStyle="bold"
                            />
                    </android.support.design.widget.TextInputLayout>
                    <View
                        android:layout_width="150dp"
                        android:layout_height="1dp"
                        android:layout_below="@id/input_boxno"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#cccccc" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ndrlist_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/l3"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="vertical"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="4dp"
                    android:textColorHint="#000000">
                    <AutoCompleteTextView
                        android:id="@+id/ndrlist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:drawableRight="@mipmap/ic_chevron_down_grey600_24dp"
                        android:hint="@string/delivery_status"
                        android:textSize="14dp"

                        />

                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="#cccccc" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/uploadDocumentlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ndrlist_layout"
                android:layout_marginTop="20dp"
                android:background="@drawable/dotted"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:layout_weight=".5"
                    android:background="@drawable/dotted"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_doc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@mipmap/ic_uplaod"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:typeface="serif"
                        android:text="@string/upload_doc"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/uploadDocument_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight=".4"
                        android:background="@drawable/curverdrectangular_red_buttonnew"
                        android:drawableLeft="@mipmap/ic_upload"
                        android:gravity="center"
                        android:paddingLeft="10sp"
                        android:text="@string/upload"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tempretureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uploadDocumentlayout"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:theme="@style/InputLayoutTheme"
                    >
                    <EditText
                        android:id="@+id/input_temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/large"
                        android:layout_marginRight="@dimen/large"
                        android:layout_marginTop="@dimen/large"
                        android:background="@null"
                        android:gravity="center"
                        android:hint="@string/enter_temperature"
                        android:inputType="number"
                        android:maxLength="2"
                        android:paddingLeft="5dp"
                        android:paddingTop="10dp"
                        android:singleLine="true"
                        android:textSize="35sp"/>
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/input_temperature"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#cccccc" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/Signature_on_drop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tempretureLayout"
                android:layout_marginTop="20dp"
                android:background="@drawable/dotted"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:layout_weight=".5"
                    android:background="@drawable/dotted"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_drop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@mipmap/ic_uplaod"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:typeface="serif"
                        android:text="@string/signature_img"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/Signature_on_drop_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight=".4"
                        android:background="@drawable/curverdrectangular_red_buttonnew"
                        android:drawableLeft="@mipmap/ic_upload"
                        android:gravity="center"
                        android:paddingLeft="10sp"
                        android:text="@string/upload"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/Pod_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Signature_on_drop"
                android:layout_marginTop="20dp"
                android:background="@drawable/dotted"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="1"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:layout_weight=".5"
                    android:background="@drawable/dotted"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/image_pod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="5dp"
                        android:src="@mipmap/ic_uplaod"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="7dp"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight=".6"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:typeface="serif"
                        android:text="@string/drop_pod"
                        android:textColor="@color/black"/>
                    <Button
                        android:id="@+id/Pod_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight=".4"
                        android:background="@drawable/curverdrectangular_red_buttonnew"
                        android:drawableLeft="@mipmap/ic_upload"
                        android:gravity="center"
                        android:paddingLeft="10sp"
                        android:text="@string/upload"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Pod_layout"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">
                <Button
                    android:id="@+id/resume_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/xxlarge"
                    android:background="@mipmap/ic_btn_red"
                    android:gravity="center"
                    android:minHeight="170dp"
                    android:minWidth="170dp"
                    android:text="@string/button_resume"
                    android:textColor="@color/white"
                    android:textSize="22dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</LinearLayout>