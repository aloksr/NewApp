<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardCornerRadius="4dp"
        android:layout_gravity="center">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/cross_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_close_grey600_18dp" />


        </RelativeLayout>
        <LinearLayout
            android:id="@+id/l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/l2"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                    android:id="@+id/error_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/xxlarge"
                    android:layout_marginRight="@dimen/xxlarge"
                    android:textStyle="bold"
                    android:textSize="15dp"
                   android:textColor="@color/black"
                android:gravity="center"

                    android:paddingLeft="5dp" />




            <Button
                android:id="@+id/ok_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="80dp"
                android:maxLength="12"
                android:gravity="center"
                android:layout_marginBottom="50dp"
                android:background="@drawable/curverdrectangular_red_button"
                android:minHeight="55dp"
                android:minWidth="300dp"
                android:text="@string/ok"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>
