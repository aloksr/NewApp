<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:id="@+id/btnAttendancereport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="170dp"
        android:gravity="center"
        android:minHeight="170dp"
        android:text="@string/button_attendance"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@mipmap/ic_btn_green"/>
    <Button
        android:id="@+id/btnTripReport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxlarge"
        android:minWidth="170dp"
        android:gravity="center"
        android:minHeight="170dp"
        android:text="@string/button_trip"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@mipmap/ic_btn_red"/>
</LinearLayout>
